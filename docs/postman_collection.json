{
  "info": {
    "name": "E-Commerce-Order-Management-System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/v1/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password\"\n}"
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/v1/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password\"\n}"
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    },
    {
      "name": "Categories - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/categories"
      }
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/products"
      }
    },
    {
      "name": "Products - Show",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/products/1"
      }
    },
    {
      "name": "Cart - Add",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/v1/cart",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 1,\n  \"quantity\": 2\n}"
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ]
      }
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/v1/orders",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}